<h1>New Shoe Form</h1>

<%= form_for(@shoe) do |f| %>
  <div class="field">
    <%= f.label :brand, 'Brand' %><br/>
    <%= f.text_field :brand %>
  </div>

  <div class="field">
    <%= f.label :model %><br/>
    <%= f.text_field :model %>
  </div>

  <div class="field">
    <%= f.label :version %><br/>
    <%= f.text_field :version %>
  </div>

  <div class="field">
    <%= f.label :picture %><br/>
    <%= f.text_field :picture %>
  </div>

  <div class="field">
    <%= f.label :year %><br/>
    <%= f.text_field :year %>
  </div>

  <div class="field">
    <%= f.label :price %><br/>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Add Shoe"%>
  </div>
<% end %>



