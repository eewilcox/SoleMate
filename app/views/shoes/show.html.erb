<h1> <%= @shoe.brand %> <%= @shoe.model %> <%= @shoe.version %> </h1>
<%= image_tag(@shoe.picture) %>
<p> <%= @shoe.year%> </p>
<p> <%= @shoe.price %> </p>
<p> <%= @shoe.description %> </p>

<%= form_for [@shoe, @review] do |f| %>
<%= f.label :rating %><br/>
<%= f.text_field :rating %>
<br/>
<%= f.label :description, "Review" %><br/>
<%= f.text_field :description %>
<br/>
<%= f.submit "Add Review"%>
<% end %>

<ul>
  <% @reviews.each do |review| %>
  <li>
    <%= review.rating %>
    <%= review.description %>
    <%= link_to "Delete", shoe_reviews_path(@shoe, review), method: :delete, params:{review: review.id}, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
