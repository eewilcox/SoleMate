<!DOCTYPE html>
<html>
  <head>
    <title>SoleMate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <div class="row">
        <div class="top-bar-left">
        <% if user_signed_in? %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        </div>
        <div class="top-bar-right">
           <%= link_to 'Change My User Info', edit_user_registration_path %>
          <%= image_tag(current_user.photo_url) if current_user.photo_url %>
        </div>
        <% if current_user.admin? %>
          <div class="list-of-users">
            <%= link_to 'List of Users', users_path %>
          </div>
        <% end %>
      </div>
        <%else%>
        <div class="row">
          <div class="top-bar-left">
            <li><%= link_to 'Sign In', new_user_session_path %></li>
          </div>
          <div class="top-bar-right">
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </div>
      </div>
    </nav>

    <% if notice.is_a?(Array) %>
      <% notice.each do |this_notice| %>
        <p class="notice"><%= this_notice %></p>
      <% end %>
    <%elsif notice %>
      <p class="notice"> <%= notice %></p>
    <% end %>

    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
